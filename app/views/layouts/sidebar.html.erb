<h1>處理中的工作</h1>
<%= content_for :sidebar do %>
<table border='1'>
  <tr>
  	<th>公告者姓名</th>
  	<th style="	min-width: 425px;">標題</th>
    <th>公告開始日</th>
  </tr>
  <% @announcements.each do |announcement| %>
  <tr>
  <td><%= AdmUser.find_by_id(announcement.adm_user_id).name %></td>
  
  <td><%= link_to announcement.subject , announcement %></td>
  <td><%= announcement.start_show.strftime("%Y/%m/%d") %></td>
  </tr>
  <% end %>
</table>


