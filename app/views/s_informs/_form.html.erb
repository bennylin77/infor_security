      <h2><%= pluralize(@s_inform.errors.count, "error") %> prohibited this s_inform from being saved:</h2>

      <ul>
      <% @s_inform.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  	工作編號:
  	<%= @s_inform.job_id %>
  </div>
