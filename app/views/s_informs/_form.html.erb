    <%= f.label :事件描述 %><br />
    <%= f.text_area :description_alternation, :size=> '150x3' %>
  </div>
  <div class="field">
    <%= f.label :建議處理事項 %><br />
    <%= f.text_area :suggestion_alternation, :size=> '150x3' %>
  </div>
