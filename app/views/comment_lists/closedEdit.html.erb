<h1>事件處理</h1>
<br>
<%= render :partial => "comment_detail_form", :locals => { :comment => @comment } %>

<%= form_tag do%>
	<h1>結案紀錄(Result)</h1>
	<div class="field">
		<%= text_area_tag :result %>
	</div>
	<%= hidden_field_tag 'id', @comment.id%>	
	<%= hidden_field_tag 'adm_id', @comment.adm_user_id%>	
	<%=submit_tag "結案"%><br><br>
	<span id="green_button"><%=link_to '退回工程師',{:controller=>:comment_lists, :action=>:returnEdit, :id=>@comment.id} %></span>
<%end%>





